class Solution {
public:
    int minCost(string colors, vector<int>& neededTime) {
        int n = colors.size();
        int total = 0;
        
        for(int i = 1; i < n; i++){
            if(colors[i] == colors[i-1]){
                // remove the one with smaller time
                total += min(neededTime[i], neededTime[i-1]);
                // update current to max time (keep larger one)
                neededTime[i] = max(neededTime[i], neededTime[i-1]);
            }
        }

        return total;
    }
};
