class Solution {
public:
    bool rotateString(string s, string goal) {

        int stringSize = s.size();
        string refString = s;
        int rotations = 0;

        while(rotations < stringSize){
            char firstChar = s[0];
            for(int i = 0 ; i < stringSize-1 ; i++){
                     s[i] = s[i+1];
                }
            s[stringSize - 1] = firstChar;
            // ek rotation done 
           
                if(s == goal){
                    return true;
                }
                rotations ++;
            

        }
        return false;
        


        
    }
};