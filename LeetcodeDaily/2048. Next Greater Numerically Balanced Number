class Solution {
public:
    bool isBalanced(int x) {
        string s = to_string(x);
        vector<int> count(10, 0);
        for (char c : s) count[c - '0']++;

        for (int d = 0; d < 10; d++) {
            if (count[d] > 0 && count[d] != d)
                return false;
        }
        return true;
    }

    int nextBeautifulNumber(int n) {
        int num = n + 1;
        while (true) {
            if (isBalanced(num)) return num;
            num++;
        }
    }
};
