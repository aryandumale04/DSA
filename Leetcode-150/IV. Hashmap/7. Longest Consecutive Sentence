class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
       int maxLength = 0;

       unordered_set<int> st(nums.begin(), nums.end()); // all the elements of nums stored in set 

       for (int x : st) {
        if (st.find(x - 1) == st.end()) {
            // this element is the start of a new sequence
            int currLength = 1;
            int curr = x;
            while (st.find(curr + 1) != st.end()) {
                currLength ++;
                curr = curr + 1;
            }
            maxLength =  max(maxLength, currLength);
        }
       }
       
       return maxLength;
    }
};