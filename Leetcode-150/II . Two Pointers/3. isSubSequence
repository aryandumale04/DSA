#include<map>
class Solution {
public:
    bool isSubsequence(string s, string t) {
        int n = t.length();
        int lastChar = 0;
        for (int i = 0; i < s.length(); i++) {
            bool charPresent =  false;
            for (int j = lastChar; j < n; j++) {
                if (t[j] == s[i]) {
                    charPresent = true;
                    lastChar = j+1;
                    break;
                }
            }
            if (!charPresent) {
                return false;
            }
        }
        return true;

    }
};