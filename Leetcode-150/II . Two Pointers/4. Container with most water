class Solution {
public:
    int maxArea(vector<int>& height) {
        int maxArea = 0;
        int n = height.size();
        int i = 0;
        int j = n - 1;
        while (i < j) {
            int width = j - i;
            int hight = min(height[i],height[j]);
            int area =  width * hight;
            maxArea = max(area, maxArea);
            if (height[i] < height[j]) {
                i++;
            } else {
                j--;
            }
        }
        return maxArea;
    }
};