class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        int n =  numbers.size();
        int i = 0; 
        int j = n - 1;  
        vector<int> answer(2,0);
        while (i < j) {
            int currentSum =  numbers[i] + numbers[j];
            if (currentSum == target) {
                answer[0] = i + 1;
                answer[1] = j + 1;
                break;
            } else if (currentSum < target) {
                i ++;
            } else {
                j --;
            }
        }
        return answer;
    
    }
};