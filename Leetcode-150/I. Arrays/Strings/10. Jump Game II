class Solution {
public:
    int jump(vector<int>& nums) {
        
        int n =  nums.size();
        vector<int> minimumJumps(n,INT_MAX); // minimum number of jumps required to reach  each index to reach the start state (index - 0)
        minimumJumps[0] = 0;
        for (int i = 0; i < n; i++) {
            if (minimumJumps[i] == INT_MAX) {
                continue;
            } else{
                for (int j = 1; j <= nums[i] && i + j < n; j++ ) {
                minimumJumps[i + j] = min(minimumJumps[i + j], minimumJumps[i] + 1);
            }
            }
            //else : so lets try all possible jumps from this index
            
        } 
        return minimumJumps[n-1];

    }
};