class Solution {
public:
    int singleNumber(vector<int>& nums) {
        // 3 so XOR wont work 
        int result = 0;

        for(int bit = 0; bit < 32; bit++) {
            int count = 0;
            // check how many times is this bit set
            for(int number : nums) {
                if(number & (1 << bit)) count++;
            }
            if(count % 3 != 0) {
                // this bit is set in the unique number so we need to set this in the result as well to construct result to that number
                result |= (1 << bit);
            }
        }
        return result;
    }
};