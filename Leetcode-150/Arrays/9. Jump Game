#include<set>
class Solution {
public:
    bool canJump(vector<int>& nums) {
        int maxReach = 0; // maximum index that can be reached
        for (int i = 0; i < nums.size(); i++) {
            //check whether this index is reacheable or not 
            if (i > maxReach) {
                return false;
            }

            //reachable so include it and its steps
            maxReach = max(maxReach, i + nums[i]);
            if (maxReach >= nums.size()-1) {
                return true;
            }
            
        }
        return true;
        
    }
};